<h1> <%= @task.title %> </h1>

<p> <%= @task.details  %> </p>

<% if @task.completed == false %>
  <i class="far fa-square"></i> <%= "This task is not completed" %>
<% else %>
  <i class="fas fa-check-square"></i><%= "This task is completed" %>
<% end %>


<p><%= link_to "Back to list", tasks_path %></p>

<%= link_to "Edit this task", edit_path  %>
