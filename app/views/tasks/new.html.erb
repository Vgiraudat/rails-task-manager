<div class="container">

  <h1> New Task </h1>

  <%= form_for(@task) do |f| %>

    <div class="title">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="details">
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>

    <div class="submit">
      <%= f.submit %>
    </div>
  <% end %>

</div>
